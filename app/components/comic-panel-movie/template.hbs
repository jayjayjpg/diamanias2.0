<div>
  <button onclick={{action play}}>Slide</button>
  <button onclick={{action pause}}>Pause</button>
  <button onclick={{action reverse}}>Rev</button>
  <input type="range"
         value={{progress}}
         min="0"
         max="1"
         step="0.001"
         onfocus={{action pause}}
         oninput={{action (mut progress) value="target.value"}}>
</div>
